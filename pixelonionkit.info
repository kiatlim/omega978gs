; css[print.css][description] = 'Printer-friendly view'
; css[print.css][options][weight] = '50'
; css[print.css][options][media] = 'print'

; PLUGINS
plugins[panels][layouts] = layouts

; SCRIPTS
; Use scripts.js for simple site-wide JS
; For conditional JS, see preprocess-html.inc
; scripts[] = scripts.js

; THEME SETTINGS (978gs)
settings[alpha_grid] = '978gs'
settings[alpha_primary_978gs] = 'normal'

settings[alpha_layouts_978gs_narrow_responsive] = '1'
settings[alpha_layouts_978gs_narrow_weight] = '1'
settings[alpha_layouts_978gs_narrow_media] = 'all and (min-width: 768px) and (min-device-width: 768px), (max-device-width: 800px) and (min-width: 768px) and (orientation:landscape)'

settings[alpha_layouts_978gs_normal_responsive] = '1'
settings[alpha_layouts_978gs_normal_weight] = '2'
settings[alpha_layouts_978gs_normal_media] = 'all and (min-width: 1002px) and (min-device-width: 1002px), all and (max-device-width: 1024px) and (min-width: 1024px) and (orientation:landscape)'

settings[alpha_layouts_978gs_wide_responsive] = '1'
settings[alpha_layouts_978gs_wide_weight] = '3'
settings[alpha_layouts_978gs_wide_media] = 'all and (min-width: 1248px)'

settings[alpha_debug_block_active] = '0'
settings[alpha_debug_grid_active] = '0'