name = 'Pixel Onion Starterkit'
description = 'Pixel Onion Starterkit for 978px grid in <a href="http://drupal.org/project/omega">Omega</a>. Based on omega-html5 starterkit and <a href="http://978.gs">978.gs</a>.'
core = '7.x'
engine = 'phptemplate'
screenshot = 'screenshot.png'
base theme = 'omega'

; REQUIRED CORE REGIONS

regions[page_top] = 'Page Top'
regions[page_bottom] = 'Page Bottom'
regions[content] = 'Content'

; REGIONS

regions[branding] = 'Branding'
regions[menu] = 'Menu'

regions[header_1] = 'Header 1'
regions[header_2] = 'Header 2'

regions[sidebar_1] = 'Sidebar 1'
regions[sidebar_2] = 'Sidebar 2'

regions[footer_1] = 'Footer 1'
regions[footer_2] = 'Footer 2'

; regions[preface_1] = 'Preface 1'
; regions[preface_2] = 'Preface 2'
; regions[preface_3] = 'Preface 3'

; regions[postscript_1] = 'Postscript 1'
; regions[postscript_2] = 'Postscript 2'
; regions[postscript_3] = 'Postscript 3'
; regions[postscript_4] = 'Postscript 4'

; ZONES
zones[header] = 'Header'
zones[content] = 'Content'
zones[footer] = 'Footer'
; zones[user] = 'User'
; zones[branding] = 'Branding'
; zones[menu] = 'Menu'
; zones[preface] = 'Preface'
; zones[postscript] = 'Postscript'

; GRID
grids[978gs][name] = '978px (based on 978.gs)'
grids[978gs][layouts][narrow] = 'Narrow'
grids[978gs][layouts][normal] = 'Normal'
grids[978gs][layouts][wide] = 'Wide'
grids[978gs][columns][12] = '12 Columns'


; CSS
css[global.css][name] = 'Your custom global styles'
css[global.css][description] = 'This file holds all the globally active custom CSS of your theme.'
css[global.css][options][weight] = '10'

; OPTIONAL STYLESHEETS
css[delta/front.css][name] = 'Frontpage styles'
css[delta/front.css][description] = 'This file holds CSS for your frontpage (define use with Context/Delta)'
css[delta/front.css][options][weight] = '11'

